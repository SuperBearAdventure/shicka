{
  "compilerOptions": {
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "module": "nodenext",
    "outDir": "bin",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "target": "esnext"
  }
}
