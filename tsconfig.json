{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "lib": ["esnext"],
    "module": "node20",
    "moduleDetection": "auto",
    "noUncheckedIndexedAccess": false,
    "noUncheckedSideEffectImports": true,
    "outDir": "bin",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "types": [],
    "verbatimModuleSyntax": true
  }
}
